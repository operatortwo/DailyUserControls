<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DailyUserControls">

    <Style TargetType="{x:Type local:SizeableExpander}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SizeableExpander}">
                    <Grid x:Name="MainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="HeaderRow" Height="Auto"/>
                            <RowDefinition x:Name="ContentRow"/>
                            <RowDefinition x:Name="SplitterRow" Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border x:Name="HeaderBorder"   Background="{TemplateBinding HeaderBackground}" BorderBrush="{TemplateBinding BorderBrush}"  >
                            <Grid>
                                <HeaderedContentControl x:Name="HeaderContent" Margin="30,0,0,0" VerticalAlignment="Center" Content="{TemplateBinding Header}" />

                                <!-- Expander must be above to be clickable -->
                                <Expander x:Name="ExpanderIcon" IsExpanded="{TemplateBinding IsExpanded}" RenderTransformOrigin="0.5,0.5">
                                    <!-- correct view: point down if Expanded, point up if collapsed -->
                                    <Expander.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="-1"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Expander.RenderTransform>
                                </Expander>

                            </Grid>
                        </Border>

                        <Border x:Name="ContentBorder" Grid.Row="1"  Grid.RowSpan="2" Background="{TemplateBinding ContentBackground}" CornerRadius="10"  BorderBrush="{TemplateBinding BorderBrush}" >
                            <!-- <ContentPresenter x:Name="CP1"  Grid.Row="1" Content="{TemplateBinding UserContent}" Margin="1,4,1,0"/>  -->
                            <ContentPresenter  x:Name="CP1"  />
                        </Border>

                        <!-- must have 'Transparent' Background to detect Mouse -->
                        <GridSplitter x:Name="GridSplitter" Grid.Row="2" HorizontalAlignment="Stretch"  Background="Transparent" Height="10"/>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
